<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :reference_number %>
  <%= f.input :location, collection: @locations, prompt: "Please select a location" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :comments, placeholder: "Brief explanation of the item and significance to the regiment" %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
